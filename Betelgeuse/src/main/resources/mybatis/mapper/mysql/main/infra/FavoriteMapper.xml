<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bicycledoctors.module.favorite.FavoriteDao">
	
	<resultMap type="com.bicycledoctors.module.favorite.FavoriteDto" id="resultMapObj"></resultMap>
	
	<sql id="selectCommon">	    
		FROM
			favorite as f
			LEFT JOIN usercustomer as u on f.userCustomer_seq = u.seq
			LEFT JOIN shop as s on f.shop_shopSeq = s.shopSeq
		WHERE 1=1
    </sql>
	
	<select id="selectList" resultMap="resultMapObj">
		SELECT 
			favrSeq
			,userCustomer_seq
			,favrDelNy
			,favrUseNy
			,shop_shopSeq
		<include refid = "selectCommon"></include>
	</select>
	
	<select id="selectOne" resultMap="resultMapObj">
		SELECT 
			favrSeq
			,userCustomer_seq
			,favrDelNy
			,favrUseNy
			,shop_shopSeq
		<include refid = "selectCommon"></include>
		AND f.userCustomer_seq = #{seq}
	</select>
	
	<select id="selectOneCount" resultType="Integer">
    	select count(*)
    	<include refid = "selectCommon"></include>
    </select>
	
	<select id="selectOneCount4Shop" resultType="Integer">
    	select count(*)
    	<include refid = "selectCommon"></include>
		<if test="shopSeq != null and !shopSeq.equals('')">AND shop_shopSeq = #{shopSeq}</if>
		<if test="seq != null and !seq.equals('')">AND shop_shopSeq = #{shopSeq}</if>
		AND favrDelNy = 0
    </select>
	
	<insert id="insert">
		INSERT INTO favorite (
			userCustomer_seq
			,shop_shopSeq
		) VALUES (
			#{seq}
			,#{shopSeq}
		)
	</insert>
	
	<update id="uelete">
		UPDATE favorite SET
			favrDelNy = 1
			,favrUseNy = 0
		WHERE
			userCustomer_seq = #{seq}
	</update>

	<update id="update">
		UPDATE favorite SET
			favrDelNy = 0
			,favrUseNy = 1
		WHERE
			userCustomer_seq = #{seq}
	</update>
</mapper>